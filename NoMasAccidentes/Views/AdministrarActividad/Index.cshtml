        <div id="div-alerta" class="alert card green white-text" style="display:none">
            <div class="card-content">
                <p id="mensajeEditar"></p>
            </div>
        </div>
        <h5>Editar Actividad</h5>
        @*<div class="input-field col s6">*@

            <div class="input-field col s6">
