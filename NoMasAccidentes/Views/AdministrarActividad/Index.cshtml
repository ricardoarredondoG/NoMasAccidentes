
@{
    ViewBag.Title = "Administrar Actividades";
}

<div class="container">
    <div class="row">
        <h3 class="center-align">Administrar Actividad</h3>
        <form class="col s12" href="/AdministrarActividad/Buscar" method="post">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Actividad" id="usuario" name="usuario" type="text" class="validate">
                    <label for="rut">Usuario</label>
                </div>
                <div class="input-field col s6">
                    <input placeholder="Fecha Actividad" id="nombre" name="nombre" type="text" class="validate">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s4">
                    <input placeholder="Ingrese el Correo Electronico" id="correo" name="correo" type="email" class="validate">
                    <label for="correo">Correo Electronico</label>
                </div>
                <div class="input-field col s4">
                    <input placeholder="Ingrese el apellido" id="appelidoP" type="text" name="apellidoP" class="validate">
                    <label for="apellido">Apellido Paterno</label>
                </div>
                <div class="input-field col s4">
                    <div class="center-align">
                        <button class="btn red waves-effect">Buscar <i class="zmdi zmdi-search zmdi-hc-fw"></i></button>
                        <button class="btn modal-trigger green" data-target="modalNuevo">Nuevo <i class="zmdi zmdi-account-add zmdi-hc-fw"></i></button>
                    </div>


                </div>
            </div>
        </form>
    </div>
</div>
@model NoMasAccidentes.ViewModels.ActividadViewModel
<div class="row">
    <div class="col s12">

        <table>
            <thead>
                <tr>
                    <th data-field="id">Actividad</th>
                    <th data-field="id">Fecha Actividad</th>
                    <th data-field="price">Descripción</th>
                     
                </tr>
            </thead>
            <tbody>
                @foreach (var actividad in Model.actividad)
                {
                <tr>
                    <td>@actividad.FECHA_ACTIVIDAD</td>
                    <td>@actividad.ID_ACTIVIDAD</td>
                    <td>@actividad.DESCRIPCION_ACTIVIDAD</td>
                    

                    <td><button class="btn modal-trigger blue" data-target="modalEditar"><i class="zmdi zmdi-edit zmdi-hc-fw"></i></button></td>
                    <td><button class="btn red"><i class="zmdi zmdi-delete zmdi-hc-fw"></button></td>
                </tr>
                }


            </tbody>

        </table>
        
        <!-- Modal Nuevo -->


        <div id="modalNuevo" class="modal">
            <div class="modal-content">
                <div id="mensaje" class="alert card green white-text" style="display:none">
                    <div class="card-content">
                        <p><i class="zmdi zmdi-check zmdi-hc-fw"></i><span>Personal Registrado Correctamente</span></p>
                    </div>
                </div>
                <h5>Agregar Actividad</h5>
                <div class="input-field col s6">
                    <input placeholder="Nombre Actividad" id="txtNombre" name="nombre" type="text" class="validate">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s6">
                    <input placeholder="Fecha" id="txtApellidoPaterno" name="apellidoPaterno" type="text" class="validate" required>
                    <label for="nombre">Apellido Paterno</label>
                </div>
                <div class="input-field col s6">
                    <input placeholder="Tipo Actividad" id="txtApellidoMaterno" name="apellidoNaterno" type="text" class="validate" required>
                    <label for="nombre">Apellido Materno</label>
                </div>
                
