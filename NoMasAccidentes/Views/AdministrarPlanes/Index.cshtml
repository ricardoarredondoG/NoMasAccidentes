
@{
    ViewBag.Title = "Administrar Planes";
}

<div class="container">
    <div class="row">
        <h3 class="center-align">Administrar Tipo Contrato</h3>
        <form class="col s12" href="/AdministrarPlanes/Buscar" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Ingrese el Nombre" id="nombreTipoContrato" name="nombreTipoContrato" type="text" class="validate">
                    <label for="rut">Nombre</label>
                </div>
                <div class="input-field col s4">
                    <input placeholder="Ingrese el Valor" id="precioDesde" name="precioDesde" type="number" class="validate">
                    <label for="nombre">Precio Desde $</label>
                </div>
                <div class="input-field col s4">
                    <input placeholder="Ingrese el Valor" id="precioHasta" name="precioHasta" type="number" class="validate">
                    <label for="correo">Precio Hasta $</label>
                </div>
                <div class="input-field col s4">
                    <div class="center-align">
                        <button class="btn red waves-effect">Buscar <i class="zmdi zmdi-search zmdi-hc-fw"></i></button>
                        <button class="btn modal-trigger green" data-target="modalNuevo">Nuevo <i class="zmdi zmdi-account-add zmdi-hc-fw"></i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s12">

        <table>
            <thead>
                <tr>
                    <th data-field="id">Nombre</th>
                    <th data-field="id">Descripcion</th>
                    <th data-field="price">Valor Mensual</th>
                    <th data-field="price">Editar</th>
                    <th data-field="price">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @model NoMasAccidentes.ViewModels.IndexViewModel
                @foreach (var tipoContrato in Model.tipoContrato)
                {
                    <tr>
                        <td>@tipoContrato.NOMBRE</td>
                        <td>@tipoContrato.DESCRIPCION</td>
                        <td>$@string.Format("{0:N0}", tipoContrato.VALOR)</td>

                        <td><button class="btn modal-trigger blue" data-target="modalEditar"><i class="zmdi zmdi-edit zmdi-hc-fw"></i></button></td>
                        <td><button class="btn modal-trigger red" data-target="modalEliminar" id="eliminar"><i class="zmdi zmdi-delete zmdi-hc-fw"></i></button></td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="center-align">

            @{Html.RenderPartial("_paginador", Model);}
        </div>

    </div></div>
